                                                <StackPanel.Resources>
                                                    <Style TargetType="{x:Type TextBlock}">
                                                        <Setter Property="Foreground" Value="{StaticResource DupChecker_Panel_FileOperation_Texts}" />
                                                    </Style>
                                                    <Style TargetType="{x:Type RadioButton}">
                                                        <Setter Property="Foreground" Value="{StaticResource DupChecker_Panel_FileOperation_Texts}" />
                                                    </Style>
                                                </StackPanel.Resources>

                                                <Button Content="Select Files" Style="{StaticResource ButtonStyle}" Command="{Binding ShredWindow.Command_SelectFiles}" Visibility="Visible" IsEnabled="{Binding DupChecker.EnableScanFolder}"/>
                                                <TextBlock Text=" " />
                                                <Button Content="Select Folders" Style="{StaticResource ButtonStyle}" Command="{Binding ShredWindow.Command_SelectFolders}" Visibility="Visible" IsEnabled="{Binding DupChecker.EnableSelectFolder}"/>
                                                <TextBlock Text=" " />
                                                <Button Content="Shred Recycle Bin" ToolTip="Shred the files in Recycle Bin" Style="{StaticResource ButtonStyle}" Command="{Binding ShredWindow.Command_ShredRecycleBin}" Visibility="Visible" IsEnabled="{Binding DupChecker.EnableSelectFolder}"/>
                                                <TextBlock Text=" " />
                                                <Button  Content="Start Shredding" Style="{DynamicResource ButtonStyle}" Command="{Binding ShredWindow.Command_ShredStart}" Visibility="Visible" IsEnabled="{Binding DupChecker.EnableRemoveDuplicates}" />
                                            </StackPanel>
                                        </Grid>

                                        <Grid Grid.Column="1" Grid.Row="2">
                                            <ListView Margin="5"
                          BorderThickness="0"
                          ItemsSource="{Binding ShredWindow.ShredFilesCollection}" AlternationCount="2"
                          SelectedIndex="0">
                                                <ListView.View>
                                                    <GridView>
                                                        <GridViewColumn DisplayMemberBinding="{Binding FilePath }"
                                            Header="File\Folder Path" />
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>

                        <!-- Cleaner logs -->
                        <Grid Visibility="{Binding CleanerML.Run, Converter={StaticResource boolTovis}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="1">
                                    <Border BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}">
                                        <ProgressBar Height="25" Maximum="{Binding CleanerML.MaxProgress}" Value="{Binding CleanerML.ProgressIndex}" VerticalAlignment="Center" IsHitTestVisible="False" Margin="1" IsIndeterminate="{Binding CleanerML.ProgressIsIndeterminate}" Style="{DynamicResource ProgressBarStyle}"/>
                                    </Border>
                                    <TextBlock Text="{Binding CleanerML.ProgressText}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource MainWindow_ProgressBar_Progress_Text}" >
                                        <TextBlock.Effect>
                                            <DropShadowEffect ShadowDepth="2" BlurRadius="3" Color="{DynamicResource {x:Static SystemColors.ActiveCaptionTextColorKey}}" Opacity="0.2"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                    <Button Content="SaveLog" VerticalAlignment="Top" HorizontalAlignment="Right" Style="{StaticResource ButtonStyle}" Margin="0,0,90,0"  IsEnabled="{Binding CleanerML.btnCloseEnable}" Command="{Binding CleanerML.Command_SaveLog}" />
                                    <Button Content="Close" VerticalAlignment="Top" HorizontalAlignment="Right" Style="{StaticResource ButtonStyle}" Margin="0,0,10,0" IsEnabled="{Binding CleanerML.btnCloseEnable}" Command="{Binding CleanerML.Command_CloseWindow}" />
                                </Grid>
                            </Grid>
                            <Border Grid.Row="1" Background="White">
                                <TextBox x:Name="txtLog" IsReadOnly="True" BorderThickness="0" Text="{Binding CleanerML.TextLog}" AllowDrop="False" IsTabStop="False" Foreground="{Binding CleanerML.txtLoForgoundColor}" ScrollViewer.VerticalScrollBarVisibility="Auto" />
                            </Border>
                        </Grid>

                        <!-- front page -->
                        <Border x:Name="gridMain" Margin="0" Visibility="{Binding CleanerML.ShowFrontPage, Converter={StaticResource boolTovis}}">
                            <!--Background="#f0f7fe"-->
                            <Grid Margin="10">
                                <Grid.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="Segoe UI" />
                                    </Style>
                                </Grid.Resources>

                                <Image x:Name="logo" Source="Assets/MicroHealth_Logo_200.png" Opacity="1" Width="200"  Stretch="Uniform" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,13,0,0"/>

                                <StackPanel>
                                    <TextBlock Text="mCleaner" Foreground="Black" FontSize="30"/>
                                    <TextBlock Text="A complete system cleaner for Windows!" />
                                    <TextBlock>Copyright© <ctl:HyperlinkEx NavigateUri="http://www.microhealthllc.com">MicroHealth, LLC</ctl:HyperlinkEx> 2015</TextBlock>
                                    <TextBlock Text=" " />
                                </StackPanel>

                                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left">
                                            This program is licensed under GPL v3.
                                            <LineBreak />
                                            <ctl:HyperlinkEx NavigateUri="http://www.gnu.org/licenses/gpl-3.0.html">http://www.gnu.org/licenses/gpl-3.0.html</ctl:HyperlinkEx>
                                </TextBlock>

                                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right">
                                            Please send your feedback to
                                            <LineBreak />
                                            <ctl:HyperlinkEx NavigateUri="mailto:feedback@microhealthllc.com">feedback@microhealthllc.com</ctl:HyperlinkEx>
                                </TextBlock>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
                                    <TextBlock Text="Start cleaning now!" FontSize="20" TextAlignment="Center"  Padding="5" Margin="0,0,0,3" />
                                    <StackPanel Orientation="Horizontal">
                                        <controls:Tile Title="Safe Cleaning" Name="TileSafeCleaning"
                               Style="{StaticResource SmallTileStyle}" TiltFactor="2" Command="{Binding CleanerML.Command_Clean}" HorizontalAlignment="Center"
                                                       HorizontalContentAlignment="Center" CommandParameter="1" Background="#4B5B88" Foreground="White" Margin="3">
                                            <Rectangle Fill="White" Height="64" Width="64">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Image Source="Assets/clean_safe_2_large.png" ></Image>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </controls:Tile>
                                        <controls:Tile Title="Moderate Cleaning" Name="TileMordrateCleaning"
                               Style="{StaticResource SmallTileStyle}" TiltFactor="2" Command="{Binding CleanerML.Command_Clean}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" CommandParameter="2"
                                                       Background="#2F3F6F" Foreground="White" Margin="3">
                                            <Rectangle Fill="White" Height="64" Width="64">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Image Source="Assets/clean_safe_2_large.png" ></Image>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </controls:Tile>
                                        <controls:Tile Title="Aggressive Cleaning" Name="TileAggressiveCleaning"
                               Style="{StaticResource SmallTileStyle}" TiltFactor="2" Command="{Binding CleanerML.Command_Clean}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" CommandParameter="3"
                                                       Background="#192855" Foreground="White" Margin="3">
                                            <Rectangle Fill="White" Height="64" Width="64">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Image Source="Assets/clean_safe_2_large.png" ></Image>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </controls:Tile>
                                        <controls:Tile Title="Clean Duplicates" Name="TileCleanDuplicates"
                               Style="{StaticResource LargeTileStyle}" TiltFactor="2" Command="{Binding DupChecker.Command_ShowDupTab}" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                                                       Background="#37862F" Foreground="White" Margin="3">
                                            <Rectangle Fill="White" Height="60" Width="60">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Image Source="Assets/CleanDuplicates_large.png" ></Image>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </controls:Tile>


                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <controls:Tile Title="Custom Selection" Name="TIleCustomSelection"
                               Style="{StaticResource SmallTileStyle}" TiltFactor="2" Command="{Binding CleanerML.Command_CustomCleaningSelection}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" CommandParameter="3"
                                                       Background="#230538" Foreground="White" Margin="3">
                                            <Rectangle Fill="White" Height="64" Width="64">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Image Source="Assets/clean_safe_2_large.png" ></Image>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </controls:Tile>
                                        <controls:Tile Title="Registry Cleaning" Name="TileRegistrySelection"
                               Style="{StaticResource SmallTileStyle}" TiltFactor="2" Command="{Binding CleanerML.Command_RegistrySelection}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" CommandParameter="3"
                                                       Background="#7E4719" Foreground="White" Margin="3">
                                            <Rectangle Fill="White" Height="64" Width="64">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Image Source="Assets/clean_safe_2_large.png" ></Image>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </controls:Tile>
                                        <controls:Tile Title="Clear Selection" Name="TileClearSelection"
                               Style="{StaticResource SmallTileStyle}" TiltFactor="2" Command="{Binding CleanerML.CommandClearSelection}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" CommandParameter="3"
                                                       Background="#7481A6" Foreground="White" Margin="3">
                                            <Rectangle Fill="White" Height="64" Width="64">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Image Source="Assets/ClearSelectionLarge.png" ></Image>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </controls:Tile>
                                        <controls:Tile Title="Uninstall Programs" Name="TileUninstall"
                               Style="{StaticResource SmallTileStyle}" TiltFactor="2" Command="{Binding Uninstaller.Command_ShowUninstaller}" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                                                       Background="#542702" Foreground="White" Margin="3">
                                            <Rectangle Fill="White" Height="60" Width="60">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Image Source="Assets/UninstallPrograms_large.png" ></Image>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </controls:Tile>
                                        <controls:Tile Title="Shred Files/Folders" Name="TileShredFileFolder"
                               Style="{StaticResource SmallTileStyle}" TiltFactor="2"  Command="{Binding ShredWindow.Command_ShowWindow}" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                                                       Background="#081439" Foreground="White" Margin="3">
                                            <Rectangle Fill="White" Height="60" Width="60">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Image Source="Assets/ShredFolder.png" ></Image>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </controls:Tile>

                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <controls:Tile Title="Preview" Name="TilePreview"
                               Style="{StaticResource SmallTileStyle}" TiltFactor="2" Command="{Binding CleanerML.Command_Preview}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" CommandParameter="3"
                                                       Background="#5AA552" IsEnabled="{Binding CleanerML.btnPreviewCleanEnable}" Foreground="White" Margin="3">
                                            <Rectangle Fill="White" Height="60" Width="60">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Image Source="Assets/PreviewLarge.png" ></Image>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </controls:Tile>
                                        <controls:Tile Title="Clean Now" Name="TileCleanNow"
                               Style="{StaticResource SmallTileStyle}" TiltFactor="2" Command="{Binding CleanerML.Command_CleanNow}" HorizontalAlignment="Center" HorizontalContentAlignment="Center" CommandParameter="3"
                                                       Background="#084502" IsEnabled="{Binding CleanerML.btnPreviewCleanEnable}" Foreground="White" Margin="3">
                                            <Rectangle Fill="White" Height="60" Width="60">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Image Source="Assets/clean_safe_2_large.png" ></Image>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </controls:Tile>
                                        <controls:Tile Title="Scan PC for Viruses" Name="TileScanPC"
                               Style="{StaticResource LargeTileStyle}" TiltFactor="2" Command="{Binding Clam.Command_ScanForVirus}" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                                                       Background="#8F71A5" Foreground="White" Margin="3">
                                            <Rectangle Fill="White" Height="60" Width="60">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Image Source="Assets/Scan_Memory.png" ></Image>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </controls:Tile>

                                        <controls:Tile Title="Scan Memory for Viruses" Name="TileScanMemory"
                               Style="{StaticResource SmallTileStyle}" TiltFactor="2" Command="{Binding Clam.Command_ScanMemory}" HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                                                       Background="#522B6E" Foreground="White" Margin="3">
                                            <Rectangle Fill="White" Height="60" Width="60">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush>
                                                        <VisualBrush.Visual>
                                                            <Image Source="Assets/Scan_Memory.png" ></Image>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </controls:Tile>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <ucw:ClamWindowVirusScan    Visibility="{Binding Clam.ShowClamWinVirusScanner,      Converter={StaticResource boolTovis}}" />
        <ucw:ClamWindow             Visibility="{Binding Clam.ShowClamWinVirusUpdateWindow, Converter={StaticResource boolTovis}}" />
        <ucw:PreferencesWindow      Visibility="{Binding Prefs.ShowWindow,                  Converter={StaticResource boolTovis}}" />
        <ucw:ReleaseNotesWindow     Visibility="{Binding ReleaseNote.ShowWindow,            Converter={StaticResource boolTovis}}" />
        <ucw:PrivacyPolicy     Visibility="{Binding PrivacyPolicy.ShowWindow,            Converter={StaticResource boolTovis}}" />
        <ucw:ProgramUninstallerWindow     Visibility="{Binding Uninstaller.ShowWindow,            Converter={StaticResource boolTovis}}" />




    </Grid>
